{
  "extends": "@dt/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowSyntheticDefaultImports": true, // it is needed for e.g: dayjs import
    "paths": {
      "@/*": ["./src/*"],
      "@features/*": ["./src/features/*"],
      "*": ["./src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
